variable name index ar_fcc

# Initialization
units		real
boundary	p p p
atom_style	full
log 		${name}.txt

# neighbour list search related settings
neighbor	0.4 bin
neigh_modify	every 10 one 10000

# nonbonding interaction cutoff settings
# class2 type 9-6 lj potential, set cutoff
# real space coulomb, set cutoff
#pair_style lj/class2/coul/long 9.0
pair_style lj/cut 13.0
# kspace coulomb
# pppm/cg good for systems that are mostly uncharged
#kspace_style pppm 1.0e-4

# class2 bond functionals
bond_style harmonic
angle_style harmonic

# read geometry
read_data	${name}.data
#read_restart restart.${name}.eq

# time step and output frequency
# thermo_style custom time temp pe ke etotal 
thermo_style	custom time temp pe ke etotal lx ly lz xy xz yz vol
thermo          1000
variable dt equal 4.0
variable T equal 70.0
variable P equal 1.0
timestep	$(dt)

####################################################
# Equilibration (NVT)
velocity all create $T 12310 mom yes rot yes dist gaussian
fix         1 all nvt temp $T $T 10 drag 0.2
dump        1 all dcd 1000 eq.dcd

